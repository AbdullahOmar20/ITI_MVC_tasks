@model List<Employee>
@{
	ViewData["Title"] = "information";
	int index = 1;
}

<h1>Information</h1>
<hr/>
<a asp-controller="Employees" asp-action="Add" class="btn btn-outline-success">Add new Employee</a>
<a asp-controller="Validation" asp-action="Add" class="btn btn-outline-success">Add new Employee with validation</a>
<table class="table table-success table-striped table-hover table-bordered border-primary">
	<tr>
		<th>#</th>
		<th>Name</th>
		<th>Depatment</th>
		<th>Email</th>
		<th>Controls</th>
	</tr>
	@foreach(Employee emp in Model){
		<tr>
			<td>@(index++)</td>
			<td>@emp.Name</td>
			<td>@emp.department</td>
			<td>@emp.Email</td>
			<td>
				<a asp-controller="Employees" asp-action="Details" asp-route-id="@emp.Id"><i class="fa-solid fa-info"></i></a>
				<a asp-controller="Employees" asp-action="Edit" asp-route-id="@emp.Id"><i class="fa-solid fa-file-pen"></i></a>
				<a asp-controller="Employees" asp-action="Delete" asp-route-id="@emp.Id"><i class="fa-solid fa-trash"></i></a>
			</td>

		</tr>
	}
</table>