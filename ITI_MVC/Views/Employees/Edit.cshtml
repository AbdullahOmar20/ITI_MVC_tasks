@model Employee
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
	<div class="row"><h1 class="text-bg-dark text-center">Edit</h1></div>
	<div class="row text-center">
		<div class="col"></div>
		<div class="col-8">
		<form asp-controller="Employees" asp-action="EditONDB" method="post" >

			<input value="@Model.Id" name="Id" hidden />
			<div class="input-group mb-3">
				<span class="input-group-text">Name</span>
				<input asp-for="Name" class="form-control"  />
				<br />
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">Address</span>
				<input asp-for="Adress" class="form-control"  />
				<br />
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">Salary</span>
				<input asp-for="Salary" class="form-control"  />
				<br />
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">department</span>
				<input asp-for="department" class="form-control"  />
				<br />
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">Email</span>
				<input asp-for="Email" class="form-control"  />
				<span class="input-group-text">Password</span>
				<input asp-for="Password" class="form-control"  />
				<br />
			</div>
			<div class="input-group mb-3">
				<span class="input-group-text">Office ID</span>
				<select asp-for="Office_Id" asp-items="ViewBag.Office" class="form-control" >
					
				</select>
				<br />
			</div>
			<div class="input-group mb-3 d-grid col-6 mx-auto">
				<input type="submit" class="btn btn-outline-primary" value="Edit" />
			</div>

		</form>
		</div>
		<div class="col"></div>
	</div>
	<div class="row"><h3 class="text-bg-dark text-center">Thank you for visiting us </h3></div>
</div>

